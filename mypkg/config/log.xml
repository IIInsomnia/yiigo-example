<seelog>
    <outputs formatid="main">
        <filter levels="debug,info,warn,error,critical">
            <console />
        </filter>
        <filter levels="debug">
            <file path="debug.log" />
        </filter>
        <filter levels="info">
            <file path="info.log" />
        </filter>
        <filter levels="warn">
            <file path="warn.log" />
        </filter>
        <filter levels="error">
            <file path="error.log" />
        </filter>
        <filter levels="critical">
            <file path="critical.log" />
        </filter>
    </outputs>
    <formats>
        <format id="main" format="[%Date | %Time] [%LEV] %Msg%n"/>
    </formats>
</seelog>