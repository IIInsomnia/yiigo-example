<seelog>
    <outputs formatid="main">
        <filter levels="debug,info,warn,error,critical">
            <console />
        </filter>
        <filter levels="debug">
            <file path="logs/debug.log" />
        </filter>
        <filter levels="info">
            <file path="logs/info.log" />
        </filter>
        <filter levels="warn">
            <file path="logs/warn.log" />
        </filter>
        <filter levels="error">
            <file path="logs/error.log" />
        </filter>
        <filter levels="critical">
            <file path="logs/critical.log" />
        </filter>
    </outputs>
    <formats>
        <format id="main" format="[%Date %Time] [%LEV] %Msg%n"/>
    </formats>
</seelog>